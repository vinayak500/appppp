<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".about">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="#FFA500"
            android:layout_marginEnd="10dp"></ImageButton>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#3F51B5"
        android:padding="10dp"
        android:paddingLeft="20dp"
        android:text="updates!..."
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="386dp"
        android:layout_height="289dp"
        android:layout_margin="14dp"
        app:cardCornerRadius="10dp"

        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <!-- Description -->

            <!-- Round Image -->
            <TextView
                android:id="@+id/headlineTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFA500"
                android:padding="10dp"
                android:text="Shanishwara Mandra \n Jatra Mahotsava"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22nd to 23rd January"
                android:paddingLeft="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="234dp"
                    android:layout_height="137dp"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="10dp"
                    android:text="All the devottes are invited to take the blessings of Lord Shanishwara on 22nd january and 23rd january."
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/newsImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shani" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pooja Timings"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="#3F51B5"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="386dp"
        android:layout_height="290dp"
        android:layout_margin="14dp"
        app:cardCornerRadius="10dp"

        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <!-- Description -->

            <!-- Round Image -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning :"
                android:paddingLeft="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"></TextView>


                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:text="Temple opens at : 4.00 AM \nMaha pooja at : 7:00Am\nseva pooja starts from 7:00 AM to 8:30 AM"
                    android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afternooon :"
                android:paddingLeft="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text=" Maha pooja at : 12:00AM\nseva pooja starts from 12:00 PM to 2:30 PM"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening :"
                android:paddingLeft="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text=" Maha pooja at : 7:00PM\nseva pooja starts from 7:00 PM to 7:30 PM"
                android:textSize="16sp" />







        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Proud Patrons"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="15sp"
        android:background="#3F51B5"
        android:textStyle="bold"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:cardCornerRadius="10dp"

        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        tools:ignore="MissingConstraints"
        android:layout_marginTop="5dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="7dp"
            android:background="#FFA500"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patrons"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp"
                android:text="Purpose"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="60dp"
                android:text="Amount"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </TableRow>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/donation_history" />




    </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>


